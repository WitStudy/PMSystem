<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <th>title</th>
      <td><%= form.text_field(:title, size: Article::MAX_VAR_CHAR / 4, maxlength: Article::MAX_VAR_CHAR) %></td>
    </tr>
    <tr>
      <th>content</th>
      <td><%= form.text_area(:content, size: "#{ Article::MAX_VAR_CHAR / 4 }x#{ Article::MAX_VAR_CHAR / 8 }", maxlength: Article::MAX_VAR_CHAR) %></td>
    </tr>
    <tr>
      <th>author</th>
      <td><%= form.text_field(:author, size: Article::MAX_VAR_CHAR / 4, maxlength: Article::MAX_VAR_CHAR) %></td>
    </tr>
  </table>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
